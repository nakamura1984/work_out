<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
        行動表
      </div>
      <%= link_to 'イベント追加', new_memo_path  %>
    </div>
    <div class="right-header">
      <div class="header-button">
        <% if user_signed_in? %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <% end %>
      </div>
    </div>
</div>

<div class="messages">
  <div class="col-md-8">
  <%= month_calendar events: @calenders do |date, memos| %>
    <%= date.day %>

    <% memos.each do |memo| %>
      <div>
        <%= link_to memo.title %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="form">
</div>